<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/landmarks_details"
    android:background="#26ae90"
    android:weightSum="1">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail11"
        android:layout_width="182dp"
        android:layout_height="208dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_weight="0.09"
        android:layout_marginBottom="0dp" />


    <EditText
        android:id="@+id/pName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b4148"
        android:hint="Name"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="#999999"
        android:layout_marginTop="26dp"
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/thumbnail11"
        android:layout_toEndOf="@+id/thumbnail11" />

    <EditText
        android:id="@+id/admissionIM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b4148"
        android:hint="Admission "
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:layout_below="@+id/pName"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/thumbnail11"
        android:layout_toEndOf="@+id/thumbnail11"
        android:textColorHint="#999999"
        />

    <EditText
        android:id="@+id/opendaysIM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b4148"
        android:hint="Open Days "
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="#999999"
        android:layout_alignBottom="@+id/thumbnail11"
        android:layout_toRightOf="@+id/thumbnail11"
        android:layout_toEndOf="@+id/thumbnail11" />

    <EditText
        android:id="@+id/descIM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b4148"
        android:hint="Details "
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="#999999"
        android:layout_below="@+id/thumbnail11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />



    <EditText
        android:id="@+id/wikiIM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b4148"
        android:hint="Wiki"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="#999999"
        android:layout_below="@+id/descIM"
        android:layout_marginTop="34dp"
        android:layout_alignRight="@+id/descIM"
        android:layout_alignEnd="@+id/descIM" />

    <EditText
        android:id="@+id/addressIM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3b4148"
        android:hint="Address"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="#999999"
        android:layout_below="@+id/wikiIM"
        android:layout_marginTop="34dp"
        android:layout_alignRight="@+id/descIM"
        android:layout_alignEnd="@+id/descIM" />

    <Button
        android:id="@+id/DirectionID"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:background="#eceef1"
        android:text="Get direction"
        android:textColor="#ff7aabff"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/thumbnail11"
        android:layout_toRightOf="@+id/thumbnail11" />

</RelativeLayout>
